<?xml version="1.0" encoding="utf-8" ?>
<Template>
  <DataGridTemplateColumn Header="дії" Width="75" TextBlock.TextAlignment="Center" HeaderStyle="{StaticResource dgBtnsColHdr}">
    <DataGridTemplateColumn.CellTemplate>
      <DataTemplate>
        <StackPanel Orientation="Horizontal">
          <Button Command="{x:Static local:MyCommands.EditRowCommand}" ToolTip="редагувати рядок">
            <Image Source="Icons/edit_btn.png" Width="20" Height="20"/>
            <Button.CommandParameter>
              <MultiBinding Converter="{StaticResource multiValConv}">
                <Binding Path="SelectedItem" ElementName="gridyourPropertyName" />
                <Binding ElementName="gridyourPropertyName" />
              </MultiBinding>
            </Button.CommandParameter>
          </Button>
          <Button Command="{x:Static local:MyCommands.DeleteRowCommand}" ToolTip="видалити рядок">
            <Image Source="Icons/del_btn.jpg" />
            <Button.CommandParameter>
              <MultiBinding Converter="{StaticResource multiValConv}">
                <Binding Path="SelectedItem" ElementName="gridyourPropertyName" />
                <Binding Path="SelectedIndex" ElementName="gridyourPropertyName" />
                <Binding ElementName="gridyourPropertyName" />
              </MultiBinding>
            </Button.CommandParameter>
          </Button>
        </StackPanel>
      </DataTemplate>
    </DataGridTemplateColumn.CellTemplate>
  </DataGridTemplateColumn>
</Template>